#include <unistd.h>

void    display_integer(int a)
{
    char c;
    int flag = 0;
    if (a < 0)
    {
        if (a == -2147483648)
            a += 1;
        a *= -1;
        write(1, "-", 1);
        flag = 1;
    }
    if (a > 0)
        display_integer(a / 10);
        if (flag == 1)
        {
            write(1, "8", 1);
            return;
        }
    if (a == 0)
        return ;
    c = a % 10 + '0';
    write(1, &c, 1);
}

int main()
{
    int a = -2147483648;
    display_integer(a);
}
