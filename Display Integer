#include <unistd.h>

void	ft_putchar(char c)
{
	write(1, &c, 1);
}

void	ft_putnbr(int nb)
{
	int flag;

	if (nb == -2147483648)
	{
		nb /= 10;
		flag = 1;
	}
	if (nb < 0)
	{
		putchar('-');
		nb *= -1;
	}
	if (nb > 9)
	{
		ft_putnbr(nb / 10);
	}
	nb %= 10;
	putchar(nb + '0');
	if (flag == 1)
		putchar('8');
}


int main()
{
    int a = -2147483648;
    ft_putnbr(a);
}
